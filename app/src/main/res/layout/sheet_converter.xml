<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_sheet_dark"
    android:theme="@style/ThemeOverlay.MaterialComponents.Dark"
    android:paddingBottom="16dp">

    <View
        android:layout_width="32dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:background="#40FFFFFF"
        android:backgroundTint="#40FFFFFF" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="24dp"
        android:layout_marginBottom="6dp">

        <LinearLayout
            android:id="@+id/headerContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="8dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/abc_ic_ab_back_material" 
                app:tint="@color/accent_color"
                android:visibility="gone"
                android:layout_marginEnd="8dp"/> 

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Convert Video"
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/accent_color"/>
        </LinearLayout>

        <TextView
            android:id="@+id/btnTopSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAVE"
            android:textSize="13sp"
            android:textStyle="bold"
            android:textColor="@color/accent_color"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:visibility="gone"
            android:background="@drawable/bg_translucent_button"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:clickable="true"
            android:focusable="true"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider_color"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:id="@+id/layoutControls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="24dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/btnFormatAvif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AVIF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/accent_color"
                android:padding="8dp"/>

            <View
                android:layout_width="1dp"
                android:layout_height="16dp"
                android:background="@color/text_secondary"
                android:layout_marginHorizontal="12dp"/>

            <TextView
                android:id="@+id/btnFormatWebp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WebP"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_secondary"
                android:padding="8dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_marginBottom="12dp">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Resolution"
                android:layout_marginEnd="8dp"
                app:boxBackgroundColor="@color/input_background"
                app:boxStrokeColor="@color/accent_color"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxStrokeWidth="0dp"
                app:endIconTint="@color/text_secondary">

                <AutoCompleteTextView
                    android:id="@+id/inputResolution"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:text="Original"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:clickable="true"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Frame Rate"
                android:layout_marginStart="8dp"
                app:boxBackgroundColor="@color/input_background"
                app:boxStrokeColor="@color/accent_color"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxStrokeWidth="0dp"
                app:endIconTint="@color/text_secondary">

                <AutoCompleteTextView
                    android:id="@+id/inputFps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:text="20"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:clickable="true"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_marginBottom="24dp">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Quality"
                android:layout_marginEnd="8dp"
                app:boxBackgroundColor="@color/input_background"
                app:boxStrokeColor="@color/accent_color"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxStrokeWidth="0dp"
                app:endIconTint="@color/text_secondary">

                <AutoCompleteTextView
                    android:id="@+id/inputQuality"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:text="Medium"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:clickable="true"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Speed Preset"
                android:layout_marginStart="8dp"
                app:boxBackgroundColor="@color/input_background"
                app:boxStrokeColor="@color/accent_color"
                app:boxCornerRadiusTopStart="8dp"
                app:boxCornerRadiusTopEnd="8dp"
                app:boxCornerRadiusBottomStart="8dp"
                app:boxCornerRadiusBottomEnd="8dp"
                app:boxStrokeWidth="0dp"
                app:endIconTint="@color/text_secondary">

                <AutoCompleteTextView
                    android:id="@+id/inputSpeed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none"
                    android:text="Ultrafast"
                    android:textColor="@color/text_primary"
                    android:textSize="14sp"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:clickable="true"/>
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutPreview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="24dp"
        android:visibility="gone"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tvOriginalInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Original : 480p , 1.5 MB"
            android:textColor="@color/text_secondary"
            android:textSize="13sp"
            android:layout_marginBottom="6dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginBottom="16dp">
            
            <VideoView
                android:id="@+id/videoViewOriginal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"/>
        </FrameLayout>

        <TextView
            android:id="@+id/tvAvifInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Output : 480p , 106 KB"
            android:textColor="@color/accent_color"
            android:textStyle="bold"
            android:textSize="13sp"
            android:layout_marginBottom="6dp"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginBottom="8dp">

            <ImageView
                android:id="@+id/imgAvifPreview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:layout_gravity="center"/>
        </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="24dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ready"
            android:textColor="@color/text_secondary"
            android:textSize="13sp" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:indeterminateTint="@color/accent_color"
            android:visibility="invisible" />
    </LinearLayout>

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/cbAutoConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm automatically"
        android:textColor="@color/text_secondary"
        android:textSize="13sp"
        android:buttonTint="@color/accent_color"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:checked="true"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnConvert"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="24dp"
        android:text="Start Conversion"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:backgroundTint="@color/accent_color"
        app:cornerRadius="12dp"
        android:layout_marginBottom="12dp" />

</LinearLayout>
